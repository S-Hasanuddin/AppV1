<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Input -->
        <EditText
            android:id="@+id/etReportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/report_title_hint"
            android:inputType="text"
            android:maxLines="1" />

        <!-- Description Input -->
        <EditText
            android:id="@+id/etReportDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/report_description_hint"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top" />

        <!-- Location Button -->
        <Button
            android:id="@+id/btnGetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_location"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark"/>

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/ivImagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_preview"
            android:visibility="gone" />

        <!-- Upload Image Button -->

        <!-- Submit Button -->
        <Button
        android:id="@+id/btnSubmitReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_report"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:importantForAutofill="no"
            android:inputType="text"
            />

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark" />


    </LinearLayout>
</ScrollView>
