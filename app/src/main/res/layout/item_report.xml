<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReportDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_description"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvReportLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_location"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/ivReportImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/report_image_description"
            android:scaleType="centerCrop" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
